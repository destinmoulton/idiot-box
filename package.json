{
    "name": "idiot-box",
    "version": "0.0.1",
    "description": "Web based media manager for Raspberry Pi.",
    "main": "index.js",
    "scripts": {
        "clean-server": "rm -rf dist/server/app/*",
        "compile-react": "webpack --config webpack.config.js -d --watch",
        "compile-server": "npm run clean-server && babel --watch src/server --out-dir dist/server/app",
        "profile": "webpack --profile --json > stats.json",
        "start-server": "pm2 start pm2.config.json",
        "test": "jest --silent=false --colors --verbose",
        "test-watch": "jest --silent=false --colors --watchAll",
        "update": "node /home/pi/idiot-box/dist/server/app/scripts/daily_update.js"
    },
    "keywords": [
        "raspberry-pi",
        "react",
        "express"
    ],
    "author": "Destin Moulton",
    "license": "MIT",
    "devDependencies": {
        "@babel/cli": "^7.5.5",
        "@babel/core": "^7.5.5",
        "@babel/plugin-proposal-class-properties": "^7.5.5",
        "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
        "@babel/preset-env": "^7.5.5",
        "@babel/preset-react": "^7.0.0",
        "babel-jest": "^24.8.0",
        "babel-loader": "^8.0.6",
        "babel-plugin-import": "^1.12.0",
        "enzyme": "^3.10.0",
        "jest": "^24.8.0",
        "webpack": "^4.36.1",
        "webpack-bundle-analyzer": "^3.3.2",
        "webpack-cli": "^3.3.6"
    },
    "dependencies": {
        "antd": "^3.20.3",
        "bluebird": "^3.5.5",
        "cheerio": "^1.0.0-rc.3",
        "express": "^4.17.1",
        "fs-extra": "^8.1.0",
        "lodash": "^4.17.14",
        "mkdirp": "^0.5.1",
        "moment": "^2.24.0",
        "node-fetch": "^2.6.1",
        "node-omxplayer": "^0.6.1",
        "random-useragent": "^0.3.1",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-redux": "^7.1.0",
        "react-router-dom": "^5.0.1",
        "react-router-redux": "^4.0.8",
        "redux": "^4.0.4",
        "redux-thunk": "^2.3.0",
        "request": "^2.88.0",
        "request-promise": "^4.2.4",
        "socket.io": "^2.2.0",
        "sqlite": "^3.0.3",
        "trakt.tv": "^7.2.0"
    },
    "jest": {
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/src/"
        ]
    }
}
