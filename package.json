{
    "name": "idiot-box",
    "version": "0.0.1",
    "description": "Web based media manager for Raspberry Pi.",
    "main": "index.js",
    "scripts": {
        "clean-server": "rm -rf dist/server/app/*",
        "compile-react": "webpack --config webpack.config.js -d --watch",
        "compile-server": "npm run clean-server && babel --watch src/server --out-dir dist/server/app",
        "profile": "webpack --profile --json > stats.json",
        "start-server": "pm2 start pm2.config.json",
        "test": "jest --silent=false --colors --verbose",
        "test-watch": "jest --silent=false --colors --watchAll",
        "update": "node /home/pi/idiot-box/dist/server/app/scripts/daily_update.js"
    },
    "keywords": [
        "raspberry-pi",
        "react",
        "express"
    ],
    "author": "Destin Moulton",
    "license": "MIT",
    "devDependencies": {
        "@babel/cli": "^7.12.10",
        "@babel/core": "^7.12.10",
        "@babel/plugin-proposal-class-properties": "^7.12.1",
        "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
        "@babel/preset-env": "^7.12.11",
        "@babel/preset-react": "^7.12.10",
        "babel-jest": "^24.9.0",
        "babel-loader": "^8.2.2",
        "babel-plugin-import": "^1.13.3",
        "enzyme": "^3.11.0",
        "jest": "^24.9.0",
        "webpack": "^4.46.0",
        "webpack-bundle-analyzer": "^3.9.0",
        "webpack-cli": "^3.3.12"
    },
    "dependencies": {
        "@material-ui/core": "^4.11.3",
        "@material-ui/icons": "^4.11.2",
        "bluebird": "^3.7.2",
        "cheerio": "^1.0.0-rc.5",
        "express": "^4.17.1",
        "fs-extra": "^8.1.0",
        "got": "^11.8.1",
        "gulp": "^4.0.2",
        "gulp-sass": "^4.1.0",
        "lodash": "^4.17.20",
        "mkdirp": "^0.5.5",
        "moment": "^2.29.1",
        "node-fetch": "^2.6.1",
        "node-omxplayer": "^0.6.1",
        "random-useragent": "^0.3.1",
        "react": "^16.14.0",
        "react-dom": "^16.14.0",
        "react-lazy-load-image-component": "^1.5.1",
        "react-redux": "^7.2.2",
        "react-router-dom": "^5.2.0",
        "react-router-redux": "^4.0.8",
        "react-select-search": "^3.0.1",
        "redux": "^4.0.5",
        "redux-thunk": "^2.3.0",
        "socket.io": "^2.4.1",
        "sqlite": "^3.0.6",
        "trakt.tv": "^7.2.0"
    },
    "jest": {
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/src/"
        ]
    }
}
