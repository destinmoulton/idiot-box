{
  "name": "idiot-box",
  "version": "0.0.1",
  "description": "Web based media manager for Raspberry Pi.",
  "main": "index.js",
  "scripts": {
    "test": "jest --silent=false --colors --verbose",
    "test:watch": "jest --silent=false --colors --watchAll",
    "clean:server": "rm -rf dist/server/app/*",
    "compile:styles": "less-watch-compiler src/client/styles dist/server/public/css idiotbox.less",
    "compile:react": "webpack --config webpack.config.js -d --watch",
    "compile:server": "npm run clean:server && babel --watch src/server --out-dir dist/server/app",
    "start:server": "pm2 start pm2.config.json",
    "update": "node /home/pi/idiot-box/dist/server/app/scripts/daily_update.js"
  },
  "keywords": [
    "raspberry-pi",
    "react",
    "express"
  ],
  "author": "Destin Moulton",
  "license": "MIT",
  "devDependencies": {
    "antd": "^2.13.3",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.0",
    "babel-plugin-import": "^1.2.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "enzyme": "^2.8.2",
    "eslint-plugin-react": "^7.4.0",
    "jest": "^21.1.0",
    "less": "^2.7.3",
    "less-watch-compiler": "^1.8.0",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-router-dom": "^4.1.1",
    "react-router-redux": "^4.0.8",
    "webpack": "^3.0.0"
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "express": "^4.15.5",
    "fs-extra": "^4.0.1",
    "mkdirp": "^0.5.1",
    "node-fetch": "^1.7.1",
    "node-omxplayer": "^0.4.1",
    "random-useragent": "^0.3.1",
    "react-redux": "^5.0.5",
    "redux": "^3.7.1",
    "redux-thunk": "^2.2.0",
    "scraperjs": "^1.2.0",
    "socket.io": "^2.0.3",
    "sqlite": "^2.8.0",
    "trakt.tv": "^6.0.1"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/src/"
    ]
  }
}
