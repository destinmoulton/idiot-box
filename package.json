{
    "name": "idiot-box",
    "version": "0.0.1",
    "description": "Web based media manager for Raspberry Pi.",
    "main": "index.js",
    "scripts": {
        "clean:server": "rm -rf dist/server/app/*",
        "compile:react": "webpack --config webpack.config.js -d --watch",
        "compile:server": "npm run clean:server && babel --watch src/server --out-dir dist/server/app",
        "profile": "webpack --profile --json > stats.json",
        "start:server": "pm2 start pm2.config.json",
        "test": "jest --silent=false --colors --verbose",
        "test:watch": "jest --silent=false --colors --watchAll",
        "update": "node /home/pi/idiot-box/dist/server/app/scripts/daily_update.js"
    },
    "keywords": [
        "raspberry-pi",
        "react",
        "express"
    ],
    "author": "Destin Moulton",
    "license": "MIT",
    "devDependencies": {
        "@babel/core": "^7.3.4",
        "@babel/plugin-proposal-class-properties": "^7.3.4",
        "@babel/plugin-proposal-object-rest-spread": "^7.3.4",
        "@babel/preset-env": "^7.3.4",
        "@babel/preset-react": "^7.0.0",
        "babel-jest": "^24.4.0",
        "babel-loader": "^8.0.5",
        "babel-plugin-import": "^1.6.2",
        "enzyme": "^3.9.0",
        "jest": "^24.4.0",
        "webpack": "^4.29.6",
        "webpack-bundle-analyzer": "^3.1.0",
        "webpack-cli": "^3.2.3"
    },
    "dependencies": {
        "antd": "^3.15.0",
        "bluebird": "^3.5.1",
        "express": "^4.16.2",
        "fs-extra": "^7.0.1",
        "lodash": "^4.17.4",
        "mkdirp": "^0.5.1",
        "moment": "^2.19.2",
        "node-fetch": "^2.1.1",
        "node-omxplayer": "^0.6.1",
        "random-useragent": "^0.3.1",
        "react": "^16.8.4",
        "react-dom": "^16.8.4",
        "react-redux": "^6.0.1",
        "react-router-dom": "^4.1.1",
        "react-router-redux": "^4.0.8",
        "redux": "^4.0.1",
        "redux-thunk": "^2.2.0",
        "scraperjs": "^1.2.0",
        "socket.io": "^2.0.4",
        "sqlite": "^3.0.2",
        "trakt.tv": "^7.1.0"
    },
    "jest": {
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/src/"
        ]
    }
}
